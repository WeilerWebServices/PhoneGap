.subscribe-form
  padding-top 80px
  .text-bounds
    max-width 600px
  .description
    max-width 480px
  h1
    padding-top 40px
    border-top 1px solid white
  form
    display flex
    align-items center
    justify-content center
  .button--cta
    margin 0 0 0 20px
.text-email
  border none
  font-size 1.2rem
  padding 3px
  height 41px
  box-sizing border-box
  border-radius 4px
@media only screen and (min-width: 600px)
  .subscribe-form
    h1
      padding-top 40px
      font-size 3rem
@media only screen and (min-width: 1030px)
  .subscribe-form
    h1
      font-size 4rem
@media only screen and (min-width: 1280px)
  .subscribe-form
    h1
      font-size 4rem
